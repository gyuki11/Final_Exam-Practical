    agent any 

    stages {
        stage('Build') {
            steps {
                echo 'Building the application Hello World... !'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the application Hello World...'
            }
        }

        stage('Deploy') {
            steps {
               
                echo 'Deploying the application Hello World...'
            }
        }
    }
}
