pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                echo 'Building stage !'
                echo 'Building the application Hello World... '
            }
        }

        stage('Test') {
            steps {
                echo 'Testing stage'
                echo 'Testing the application Hello World...'
            }
        }

        stage('Deploy') {
            steps {
               echo 'Deploying stage'
                echo 'Deploying the application Hello World...'
            }
        }
    }
}
